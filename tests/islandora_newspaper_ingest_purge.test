<?php

/**
 * @file
 * Attempts to ingest a newspaper issue and page into a random collection.
 */

class IslandoraNewspaperPageIngestTestCase extends IslandoraCollectionWebTestCase {

  /**
   * Get test information.
   *
   * @see IslandoraWebTestCase::getInfo()
   */
  public static function getInfo() {
    return array(
      'name' => 'Newspaper and Page Ingest/Purge',
      'description' => 'Ingests and purges an issue from a randomly generated newspaper collection, and a page from that issue.',
      'group' => 'Islandora Object Management',
    );
  }

  /**
   * Set up the test environment.
   *
   * @see IslandoraWebTestCase::setUp()
   */
  public function setUp() {
    parent::setUp(array(
      'islandora',
      'islandora_basic_collection',
      'islandora_newspaper',
      'islandora_paged_content',
      'php_lib',
      'objective_forms',
      'xml_form_api',
      'xml_form_builder',
    ));
  }

  /**
   * Creates an administrative user and attempts to ingest an issue and page.
   */
  public function testIngestPurgeNewspaperPage() {

    // Sets up the testing space.
    $user = $this->createDrupalAdminUser();
    $this->drupalLogin($user);
    $label = $this->randomName(16);
    $suffix = $this->randomName(16);
    $collectionpid = 'islandora:' . $suffix;
    $this->createRootTestCollection($label, 'islandora:newspaperCModel', $collectionpid);
    $edit = array(
      'islandora_newspaper_ingest_derivatives[pdf]' => FALSE,
      'islandora_newspaper_ingest_derivatives[image]' => FALSE,
      'islandora_newspaper_ingest_derivatives[ocr]' => FALSE,
    );
    $this->drupalPost('admin/islandora/newspaper', $edit, 'Save configuration');

    // Attempts to create the newspaper.
    $path = 'islandora/object/' . $collectionpid . '/manage/overview/ingest';
    $newspapertitle = $this->randomName(16);
    $edit = array(
      'titleInfo[title]' => $newspapertitle,
    );
    $this->drupalPost($path, $edit, t('Ingest'));
    $this->assertText($newspapertitle, 'Newspaper was created', 'Islandora');

    // Checks for newspaper datastream creation.
    $newspaperpid = arg(5, $this->url);
    $datastreams = array(
      'RELS-EXT',
      'MODS',
      'DC',
    );
    $this->assertDatastreams($newspaperpid, $datastreams);

    // Attempts to create a newspaper issue.
    $path = 'islandora/object/' . $newspaperpid . '/manage/overview/issue_ingest';
    $issuetitle = $this->randomName(16);
    $edit = array(
      'titleInfo[title]' => $issuetitle,
    );
    $this->drupalPost($path, $edit, 'Ingest');
    $this->assertText($issuetitle, 'Issue was created', 'Islandora');

    // Checks for issue datastream creation.
    $issuepid = arg(5, $this->url);
    $datastreams = array(
      'RELS-EXT',
      'MODS',
      'DC',
    );

    // Attempts to add a page to the issue.
    $path = 'islandora/object/' . $issuepid . '/manage/overview/newspaper_page_ingest';
    $file = drupal_get_path('module', 'islandora_newspaper') . '/tests/fixtures/test.tiff';
    $edit = array(
      'files[file]' => $file,
    );
    $this->drupalPost($path, $edit, t('Ingest'));
    $this->assertText('test.tiff', 'Page was created', 'Islandora');

    // Checks for page datastream creation.
    $pagepid = arg(5, $this->url);
    $datastreams = array(
      'RELS-EXT',
      'OBJ',
      'DC',
    );
    $this->assertDatastreams($pagepid, $datastreams);

    $this->deleteTestObject($newspaperpid, $newspapertitle);
    $this->deleteRootTestCollectionByPid($collectionpid);
  }
}
