/**
 * Implements hook_CMODEL_PID_islandora_object_ingested().
 */
function islandora_newspaper_islandora_newspaperpagecmodel_islandora_object_ingested(FedoraObject $object) {
  module_load_include('inc', 'islandora_paged_content', 'includes/utilities');
  $success = TRUE;
  $derive = islandora_paged_content_get_enabled_ingest_derivatives("islandora_newspaper");
  if ($derive['pdf']) {
    $success = $success && islandora_paged_content_can_derive($object, 'PDF') && islandora_paged_content_page_derive_pdf_datastream($object);
  }
  if ($derive['image']) {
    $derived_images = islandora_paged_content_can_derive($object, 'JP2') && islandora_paged_content_page_derive_image_datastreams($object);
    if ($derived_images) {
      $paged_object = islandora_paged_content_get_relationship($object->relationships, FEDORA_RELS_EXT_URI, 'isMemberOf', NULL);
      $paged_object = islandora_object_load($paged_object);
      if ($paged_object) {
        islandora_paged_content_update_paged_content_thumbnail($paged_object);
      }
    }
    $success = $success && $derived_images;
  }
  if ($derive['ocr']) {
    $success = $success && islandora_paged_content_can_derive($object, 'OCR') && islandora_paged_content_page_derive_ocr_datastreams($object);
  }
  if (!$success) {
    $msg = t('Could not create all derivatives for %s, For more information please check the logs.', array(
             '%s' => $object->id));
    drupal_set_message($msg, 'error');
    return FALSE;
  }
}

