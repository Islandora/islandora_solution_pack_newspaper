/**
 * Implements hook_CMODEL_PID_islandora_view_object().
 */
function islandora_newspaper_islandora_newspapercmodel_islandora_view_object($object, $page_number = 1, $page_size = 5) {
  drupal_set_title($object->label);

  // All pages.
  $pages = islandora_newspaper_get_pages($object, $page_number, $page_size);

  $total_count = count($pages);
  pager_default_initialize($total_count, $page_size);
  $newspaper_pager = theme('pager', array('quantity' => 10));

  $newspaper_content = theme('islandora_newspaper', array(
    'islandora_object' => $object,
    'pages' => $pages,
  ));
  $output = theme('islandora_newspaper_wrapper', array(
    'islandora_object' => $object,
    'newspaper_content' => $newspaper_content,
    'newspaper_pager' => $newspaper_pager,
  ));
  return array('', $output);
}

