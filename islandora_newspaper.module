      // Example template with PID appended:
      // islandora-newspaper-wrapper--islandora-27.tpl.php
      'pattern' => 'islandora_newspaper_wrapper__',
      'variables' => array(
        'islandora_object' => NULL,
        'newspaper_content' => NULL,
        'newspaper_pager' => NULL,
      ),
    ),
    'islandora_newspaper_page' => array(
      'file' => 'theme/theme.inc',
      'template' => 'theme/islandora-newspaper-page',
